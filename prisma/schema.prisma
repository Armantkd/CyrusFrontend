datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("customer")
  accounts      Account[]
  sessions      Session[]
  customer      Customer?
}

model Customer {
  id       String @id
  name     String
  email    String
  imageUrl String?
  user     User    @relation(fields: [id], references: [id])
  invoices Invoice[]
}

model Invoice {
  id         String   @id 
  amount     Int
  status     String
  date       DateTime
  customer   Customer @relation(fields: [id], references: [id])
}

model Revenue {
  month   String @id @unique
  revenue Int
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
